<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#5A5A5A">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#919191">

            <EditText
                android:id="@+id/namaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Nama Perusahaan"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="240dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="310dp"
                android:layout_marginRight="15dp"
                android:text="Jenis Pekerjaan"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:entries="@array/pekerjaan_list"
                android:prompt="@array/pekerjaan_list" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="400dp"
                android:layout_marginRight="15dp"
                android:text="Rentang umur"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/usiaMin"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="430dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Min"
                android:inputType="number" />

            <EditText
                android:id="@+id/usiaMax"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="430dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Max"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="500dp"
                android:layout_marginRight="15dp"
                android:text="Pendidikan Minimum"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/pendidikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="550dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:entries="@array/pendidikan_terakhir_list"
                android:prompt="@array/pendidikan_terakhir_list" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="600dp"
                android:layout_marginRight="15dp"
                android:text="Lokasi Kerja"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/penempatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="650dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:entries="@array/penempatan_list"
                android:prompt="@array/penempatan_list" />

            <EditText
                android:id="@+id/gajiBulanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="700dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Gaji Bulanan"
                android:inputType="number" />

            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="132dp"
                android:layout_height="61dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="800dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="70dp"
                android:backgroundTint="#656B74"
                android:text="Daftar"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>