<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#8F000000"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/shigoto_logo" />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="414dp"
        android:background="#F38B1818"
        android:backgroundTint="#F38B1818"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="  Email"
        android:textColor="#CDFFFFFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="337dp"
        android:background="#F38B1818"
        android:backgroundTint="#F38B1818"
        android:ems="10"
        android:inputType="textPassword"
        android:hint=" Password"
        android:textColor="#CDFFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="287dp"
        android:layout_height="69dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="410dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttons"
        android:text="MASUK"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:text="Belum punya akun?"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnDaftarSkrng"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="477dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#00FFFFFF"
        android:text="Daftar sekarang!"
        android:textColor="#DF6B68"
        android:textSize="15sp" />

</RelativeLayout>